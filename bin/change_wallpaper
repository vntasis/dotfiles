#!/bin/sh

set -euo pipefail

# Select Image
image=$(find /usr/share/backgrounds/ -iname '*.jpg' -o -iname '*.png'  | sxiv -iotN 'wallpaper')
[ -z "$image" ] && exit 0

# Set wallpaper
wall_path="/home/vntasis/.config/wallpaper"
[ -e "$wall_path" ] && unlink "$wall_path"
ln -s "$image" "$wall_path"
DISPLAY=:0 feh --bg-scale "$wall_path"
#DISPLAY=:0 feh --bg-scale "$(echo "/home/vntasis/Pictures/$(shuf -n1 /home/vntasis/.wallpapers)")"
